---
# Hello, Jekyll!
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ site.lang }}">

  <id>{{ '/' | absolute_url | xml_escape }}</id>
  <title>{{ site.title | smartify | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <category term="culture" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <icon>{{ "/assets/images/ogp.jpg" | absolute_url | xml_escape }}</icon>
  <logo>{{ "/assets/images/logo.png" | absolute_url | xml_escape }}</logo>
  <link rel="alternate" type="text/html" href="{{ site.url | absolute_url }}" hreflang="{{ site.lang }}" />
  <link rel="self" type="application/atom+xml" href="{{ page.url | absolute_url }}" />
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>

  {% for post in site.posts %}
  <entry>
    <title type="html">{{ post.title | smartify | strip_html | normalize_whitespace | xml_escape }}</title>
    <link href="{{ post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post.title | xml_escape }}" />
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</updated>
    <id>{{ post.id | absolute_url | xml_escape }}</id>
    <content type="html" xml:base="{{ post.url | absolute_url | xml_escape }}">
      <![CDATA[{% if post.image %}<img src="{{ post.image.path }}" />{% endif %}
      {{ post.content }}]]>
    </content>

    {% assign author = site.data.authors[post.author] %}
    <author>
      <name>{{ author.name | xml_escape }}</name>
      <uri>{{ author.url | prepend: 'https://twitter.com/' | xml_escape }}</uri>
    </author>

    {% for tag in post.tags %}
      <category term="{{ tag | xml_escape }}" />
    {% endfor %}

    {% if post.excerpt and post.excerpt != empty %}
      <summary type="html">{{ post.excerpt | strip_html | normalize_whitespace | xml_escape }}</summary>
    {% endif %}
    {% if post.image %}
    <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ post.image.path | xml_escape }}" />
    {% endif %}
  </entry>
  {% endfor %}
</feed>
